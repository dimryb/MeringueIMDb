<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FilmsFragment">

    <fragment
        android:id="@+id/FilmsFragment"
        android:name="space.rybakov.meringueimdb.presentation.activity.MoviesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_movies">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/DetailsFragment" />
        <action
            android:id="@+id/action_FilmsFragment_to_SearchFragment"
            app:destination="@id/SearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailsFragment"
        android:name="space.rybakov.meringueimdb.presentation.activity.DetailsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_details"/>
    <fragment
        android:id="@+id/SearchFragment"
        android:name="space.rybakov.meringueimdb.presentation.activity.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
</navigation>